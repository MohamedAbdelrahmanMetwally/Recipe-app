                android:id="@+id/tvBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Mobile developer | Cyber security | IT | AI | Embedded systems | Game development"
                android:textAlignment="center"
                android:textColor="#555"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:mnafe44@gmail.com"
                android:textColor="#333"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="GitHub: MohamedAbdelrahmanMetwally"
                android:textColor="#333"
                android:textSize="14sp" />
        </LinearLayout>
